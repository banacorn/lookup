{
    "manifest_version": 2,

    "name": "Lookup",
    "description": "Lookup articles in wiktionary",
    "version": "1.0",
    "devtools_page": "chrome/devtools.html",
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "page_action": {
        "default_title": "Lookup"
    },
    "background": {
        "scripts": ["chrome/background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*", "file://*/*"],
        "js": [
            "chrome/content.js"
        ]
    }]
}
