{
    "manifest_version": 2,

    "name": "Lookup",
    "description": "Lookup articles in wiktionary",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs"
    ],

    "page_action": {
        "default_title": "Lookup"
    },

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["lib/parser.js", "lib/content.js"]
    }],
    "background": {
        "scripts": ["lib/background.js"],
        "persistent": false
    }
}
