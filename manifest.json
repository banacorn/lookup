{
    "manifest_version": 2,

    "name": "Lookup",
    "description": "Lookup articles in wiktionary",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],

    "page_action": {
        "default_title": "Lookup"
    },

    /**
     * For using Systemjs with Chrome-Extension just load in "js"
     * - path/to/system.js
     * - path/to/config.js (systemjs config )
     * - path/to/your/start/index.js (initial startpoint of your app)
     */
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": [
            "jspm_packages/system.js",
            "config.js",
            "js/init.js"
        ]
    }],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "options_ui": {
        "page": "html/options.html"
    },

    "web_accessible_resources": [
        "jspm_packages/*",
        "js/*.js"
    ]
}
