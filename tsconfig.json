{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "js",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "typings/main.d.ts",
        "!node_modules/**"
    ],
    "files": [
        "ts/content.ts",
        "ts/fmt.ts",
        "ts/parser.ts",
        "ts/parser/combinator.ts",
        "ts/parser/inline.ts",
        "ts/types.ts",
        "typings/globals/parsimmon/index.d.ts",
        "typings/index.d.ts",
        "typings/modules/lodash/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
