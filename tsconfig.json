{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "js",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "typings/main.d.ts",
        "!node_modules/**"
    ],
    "files": [
        "ts/backend/browser.ts",
        "ts/backend/node.ts",
        "ts/content.ts",
        "ts/fmt.ts",
        "ts/parser/combinator.ts",
        "ts/parser/element.ts",
        "ts/parser/section.ts",
        "ts/template.ts",
        "ts/template/de-noun.ts",
        "ts/template/etyl.ts",
        "ts/template/head.ts",
        "ts/template/ipa.ts",
        "ts/template/m.ts",
        "ts/type.ts",
        "ts/type/ast.ts",
        "ts/type/fmt.ts",
        "typings/globals/colors/index.d.ts",
        "typings/globals/node/index.d.ts",
        "typings/globals/parsimmon/index.d.ts",
        "typings/index.d.ts",
        "typings/modules/lodash/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
